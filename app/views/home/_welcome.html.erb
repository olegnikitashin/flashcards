<form>
  <div class="form-group text-center">
      <h3>You can <%= link_to 'Login', :login %> or <%= link_to 'Signup', new_user_path %> to start learning new words!</h3>
  </div>
  <div class="form-group text-center">
    <label for="social_icons">Connect with:</label>
    <div>
      <%= link_to auth_at_provider_path(provider: :facebook) do %>
        <%= fa_stacked_icon "facebook", base: "square-o", class: "fa-2x" %>
      <% end %>
      <%= link_to auth_at_provider_path(provider: :twitter) do %>
        <%= fa_stacked_icon "twitter", base: "square-o", class: "fa-2x" %>
      <% end %>
      <%= link_to auth_at_provider_path(provider: :github) do %>
        <%= fa_stacked_icon "github", base: "square-o", class: "fa-2x" %>
      <% end %>
    </div>
  </div>
</form>
