- if @random_card
  .panel.panel-default
    .panel-heading
      = @random_card.translated_text
    .panel-body
      = simple_form_for :card, url: :check_card do |f|
        = image_tag @random_card.picture.url if @random_card.picture?
        = f.input :input_text, label: 'Translation', input_html: { class: 'form-control' }, required: true
        = f.button :submit, 'Check', input_html:{ class: 'btn btn-default' }
        = f.hidden_field :id, value: @random_card.id
    .panel-footer
      %h4 Attempts left: #{@random_card.attempts}
      %h4 Revision number: #{@random_card.revisions}
- else
  %p All of the cards have been revised! Well done!
