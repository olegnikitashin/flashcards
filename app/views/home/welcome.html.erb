<div class="jumbotron">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <form>
        <div class="form-group text-center">
            <h3>You can <%= link_to 'Login', :login %> or <%= link_to 'Signup', new_user_path %> to start learning new words!</h3>
        </div>
        <div class="form-group text-center">
          <label for="social_icons">Connect with:</label>
          <div>
            <% %w(facebook twitter github).map do |link| %>
              <%= link_to auth_at_provider_path(provider: link) do %>
                <%= fa_stacked_icon link, base: "square-o", class: "fa-2x" %>
              <% end %>
            <% end %>
          </div>
        </div>
      </form>
    </div>
  </div>
  <br>
</div>
