.row
  .col-md-6.col-md-offset-3
    %span
      %h2
        = @deck.title
        - if @deck.current
          %span.glyphicon.glyphicon-ok
    .btn-group{ "aria-label" => "...", :role => "group" }
      = link_to 'Edit', edit_deck_path(@deck), class: 'btn btn-default btn-sm'
      = link_to 'Delete', deck_path(@deck), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default btn-sm'
      = link_to (@deck.current? ? 'Deselect' : 'Make current'), make_current_deck_path(@deck), method: :put, class: 'btn btn-default btn-sm'
      = link_to 'Back', decks_path, class: 'btn btn-default btn-sm'

    %br/
    %br/

    - if @deck.cards.empty?
      %h3
        There are no cards in this deck yet!
    - else
      - @deck.cards.each do |card|
        .panel.panel-default
          .panel-heading
            %h1.panel-title= link_to card.original_text, card
          .panel-body
            %h3.panel-title= card.translated_text
          .panel-footer
            %p= card.review_date.strftime("%d/%m/%Y")
        %br/
