= simple_form_for :user, url: user_sessions_path, :method => :post do |f|
  = f.input :email, label: t('view.email'), input_html: { class: 'form-control' }
  = f.input :password, label: t('view.password'), input_html: { class: 'form-control' }
  = f.submit t('view.login_path'), class: 'btn btn-default'
