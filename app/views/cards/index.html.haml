.row
  .col-md-12
    - if @cards.empty?
      %h3
        There are no cards in your library yet!
        %h3
    - else
      - @cards.each do |card|
        .col-md-4
          .panel.panel-default
            .panel-heading
              %h1.panel-title= link_to card.original_text, card
            .panel-body
              %h3.panel-title= card.translated_text
            .panel-footer
              %p
                Next review date: #{card.review_date.strftime("%d/%m/%Y")}
              %hr/
              %p
                Deck: #{card.deck.title}
          %br/
