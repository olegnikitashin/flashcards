= simple_form_for @card, validate: true, html: { multipart: true, class: 'form-horizontal' } do |f|
  = f.input :original_text, label: t('view.original_word'), input_html: { class: 'form-control' }
  = f.input :translated_text, label: t('view.translation'), input_html: { class: 'form-control' }
  = f.association :deck, collection: current_user.decks, label: t('view.deck_card')
  = f.input :review_date, label: t('view.review_date')
  = f.input :picture, as: :file, label: t('view.picture')
  = f.submit (f.object.new_record? ? t('view.create_card') : t('view.edit_card')), class: 'btn btn-default'
  = link_to t('view.back'), cards_path, class: "btn btn-default"
