<%= simple_form_for(@card, html: { multipart: true, class: 'form-horizontal' }) do |f| %>
  <%= f.input :original_text, label: 'Original word', input_html: { class: 'form-control' } %>
  <%= f.input :translated_text, label: 'Translation', input_html: { class: 'form-control' }  %>
  <%= f.input :picture, as: :file, label: 'Card picture' %>
  <%= f.submit (f.object.new_record? ? 'Create card' : 'Edit card'), class: 'btn btn-default' %>
  <%= link_to 'Назад', cards_path, class: "btn btn-default" %>
<% end %>
